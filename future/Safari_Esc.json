{
    "title": "Don't exit fullscreen when pressing ESC in Safari",
    "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/suliveevil/Capslock/master/future/Safari_Esc.json",
    "rules": [
        {
            "description": "Remap ESC to Option-ESC in Safari only(version: 1554334211)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.Safari$"
                            ]
                        }
                    ],
                    "to": [
                        {
                            "key_code": "escape",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Remap Capslock+ASDW to ←↓→↑",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "a",
                        "modifiers": {
                            "key_code": [
                                "caps_lock"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.sublimetext\\.3$"
                            ]
                        }
                    ],
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s",
                        "modifiers": {
                            "key_code": [
                                "caps_lock"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.sublimetext\\.3$"
                            ]
                        }
                    ],
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d",
                        "modifiers": {
                            "key_code": [
                                "caps_lock"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.sublimetext\\.3$"
                            ]
                        }
                    ],
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "w",
                        "modifiers": {
                            "key_code": [
                                "caps_lock"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.sublimetext\\.3$"
                            ]
                        }
                    ],
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ]
                }
            ]
        }
    ]
}